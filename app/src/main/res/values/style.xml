<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MyInstagram.FormEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:background">@drawable/edit_text_login</item>
        <item name="android:padding">16dp</item>

    </style>
    <style name="Theme.MyInstagram.FormEditTextInput"  parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">28dp</item>


    </style>
    <style name="Theme.MyInstagram.FormButtonLogin" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/button_backgroung</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="Theme.MyInstagram.TextViewBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_text</item>
    </style>

    <style name="Theme.MyInstagram.TextViewBase.Form">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.MyInstagram.TextViewBase.Link" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">@color/blue_enable</item>
    </style>

    <style name="Theme.MyInstagram.TextViewProfile">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.MyInstagram.Button.White" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>